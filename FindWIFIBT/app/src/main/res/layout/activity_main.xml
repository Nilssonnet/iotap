    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MD5"
        android:id="@+id/radioButtonMD5"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/radioButtonSHA_1"
        android:layout_alignStart="@+id/radioButtonSHA_1"
        android:onClick="onRadioButtonClicked"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHA-1"
        android:id="@+id/radioButtonSHA_1"
        android:layout_below="@+id/radioButtonMD5"
