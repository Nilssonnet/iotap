<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bluetooth.exjobb.com.findwifibt.StartFragment">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan for Bluetooth devices"
        android:id="@+id/buttonScan"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display hashed devices from database"
        android:id="@+id/buttonDisplay"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/buttonScan"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full anonymization"
        android:id="@+id/buttonFullAnon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semi anonymization"
        android:id="@+id/buttonSemiAnon"
        android:layout_below="@+id/buttonFullAnon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No anonymization, only hash"
        android:id="@+id/buttonNoAnon"
        android:layout_below="@+id/buttonSemiAnon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />
</RelativeLayout>
