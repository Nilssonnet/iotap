<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bluetooth.exjobb.com.findwifibt.DisplayFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display"
        android:id="@+id/buttonDisplay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp"
        android:text="Select level\n of Anonymization"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/buttonDisplay" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="475dp"
        android:id="@+id/listViewDisplay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/radioGroupDisplay"
        android:layout_gravity="center_horizontal|bottom" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/radioGroupDisplay"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_gravity="right|top">

        <RadioButton android:id="@+id/radioButtonFullAnonDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/radioButtonFullAnon"
            android:layout_gravity="right" />

        <RadioButton android:id="@+id/radioButtonSemiAnonDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/radioButtonSemiAnon" />

        <RadioButton android:id="@+id/radioButtonNoAnonDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/radioButtonNoAnon"
            android:layout_gravity="right" />
    </RadioGroup>


</RelativeLayout>
